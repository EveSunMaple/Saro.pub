---
import "@styles/global.css";
import "remixicon/fonts/remixicon.css";

const SITE_TITLE = "サン猫の時間漂流";
const SITE_DESCRIPTION = "一个孤独的地方，散落着一个人的人生碎片";
const SITE_AUTHOR = "EveSunMaple";
const OG_IMAGE_DEFAULT = "/default-social-image.png";
const TWITTER_HANDLE = "@EveSunMaple";

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = SITE_DESCRIPTION,
  image = OG_IMAGE_DEFAULT,
} = Astro.props;

const finalTitle = `${title} | ${SITE_TITLE}`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
---
<!doctype html>
<html lang="zh-CN"> 
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <meta name="author" content={SITE_AUTHOR} />
  <title>{finalTitle}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  <meta property="og:title" content={finalTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:image" content={socialImageURL} />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content={SITE_TITLE} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content={TWITTER_HANDLE} />
  <meta name="twitter:title" content={finalTitle} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={socialImageURL} />
</head>
<body class="bg-base-100 text-base-content min-h-screen flex flex-col">

  <header class="sticky top-0 z-50">
    <div class="navbar bg-base-100/80 backdrop-blur-sm border-b border-base-content/10">
      <div class="navbar-start">
        <a href="/" class="btn btn-ghost text-xl normal-case">{SITE_TITLE}</a>
      </div>
      <div class="navbar-end">
        <ul class="menu menu-horizontal px-1">
          <li><a href="/" class="active">动态</a></li>
          <li><a href="/blog">博客</a></li>
          <li><a href="/about">关于</a></li>
        </ul>
      </div>
    </div>
  </header>

  <div class="max-w-screen-xl mx-auto px-4 py-8 flex-grow w-full">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      
      <main class="lg:col-span-9">
        <slot />
      </main>
      
      <aside class="lg:col-span-3">
        <div class="card bg-base-200 shadow-sm sticky top-24">
          <div class="card-body">
            <h2 class="card-title">关于我</h2>
            <p>{SITE_DESCRIPTION}</p>
            <div class="card-actions justify-end mt-4">
              <a href="/about" class="btn btn-primary btn-sm">了解更多</a>
            </div>
          </div>
        </div>
      </aside>

    </div>
  </div>

  <footer class="footer footer-center p-10 text-base-content/60">
    <div>
      <div class="grid grid-flow-col gap-4 text-2xl">
        <a href="https://twitter.com/EveSunMaple" target="_blank" class="link link-hover"><i class="ri-twitter-line"></i></a>
        <a href="https://github.com/EveSunMaple" target="_blank" class="link link-hover"><i class="ri-github-line"></i></a>
        <a href="你的Telegram链接" target="_blank" class="link link-hover"><i class="ri-telegram-line"></i></a>
      </div> 
      <p class="mt-4">Copyright © {new Date().getFullYear()} - All right reserved by {SITE_AUTHOR}</p>
    </div>
  </footer>

</body>
</html>