---
import "@styles/global.css";
import "remixicon/fonts/remixicon.css";

const SITE_TITLE = "サン猫の時間漂流";
const SITE_DESCRIPTION = "一个孤独的地方，散落着一个人的人生碎片";
const SITE_AUTHOR = "EveSunMaple";
const OG_IMAGE_DEFAULT = "/default-social-image.png";
const TWITTER_HANDLE = "@EveSunMaple";

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = SITE_DESCRIPTION,
  image = OG_IMAGE_DEFAULT,
} = Astro.props;

const finalTitle = `${title} | ${SITE_TITLE}`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
---
<!doctype html>
<html lang="zh-CN"> 
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <meta name="author" content={SITE_AUTHOR} />
  <title>{finalTitle}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  <meta property="og:title" content={finalTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:image" content={socialImageURL} />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content={SITE_TITLE} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content={TWITTER_HANDLE} />
  <meta name="twitter:title" content={finalTitle} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={socialImageURL} />
</head>
<body class="bg-base-100 text-base-content min-h-screen">

  <!-- 顶部导航栏 -->
  <header class="sticky top-0 z-50 backdrop-blur-md bg-base-100/80 border-b border-base-content/5">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex items-center justify-between h-16">
        <!-- Logo -->
        <div class="flex items-center space-x-4">
          <a href="/" class="flex items-center space-x-3 group">
            <div class="w-8 h-8 bg-gradient-to-br from-primary to-secondary rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <i class="ri-leaf-line text-primary-content text-lg"></i>
            </div>
            <span class="text-xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
              {SITE_TITLE}
            </span>
          </a>
        </div>
        
        <!-- 导航菜单 -->
        <nav class="hidden md:flex items-center space-x-8">
          <a href="/" class="nav-link text-base-content/80 hover:text-primary transition-colors duration-300 font-medium">
            动态
          </a>
          <a href="/blog" class="nav-link text-base-content/80 hover:text-primary transition-colors duration-300 font-medium">
            博客
          </a>
          <a href="/about" class="nav-link text-base-content/80 hover:text-primary transition-colors duration-300 font-medium">
            关于
          </a>
        </nav>

        <!-- 移动端菜单按钮 -->
        <div class="md:hidden">
          <button class="btn btn-ghost btn-sm">
            <i class="ri-menu-line text-xl"></i>
          </button>
        </div>
      </div>
    </div>
  </header>

  <!-- Hero Banner -->
  <section class="relative overflow-hidden bg-gradient-to-br from-base-100 via-base-200/50 to-base-300/30">
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23A7C1A8" fill-opacity="0.05"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-50"></div>
    <div class="relative max-w-7xl mx-auto px-6 py-20">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent leading-tight">
          时光碎片
        </h1>
        <p class="text-lg md:text-xl text-base-content/70 mb-8 leading-relaxed">
          {SITE_DESCRIPTION}
        </p>
        <div class="flex items-center justify-center space-x-6 text-base-content/60">
          <div class="flex items-center space-x-2">
            <i class="ri-map-pin-line text-primary"></i>
            <span>数字世界的某个角落</span>
          </div>
          <div class="flex items-center space-x-2">
            <i class="ri-time-line text-primary"></i>
            <span>持续更新中</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 主要内容区域 -->
  <div class="max-w-7xl mx-auto px-6 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      
      <!-- 主要内容 -->
      <main class="lg:col-span-3">
        <slot />
      </main>
      
      <!-- 侧边栏 -->
      <aside class="lg:col-span-1">
        <div class="sticky top-24 space-y-6">
          
          <!-- 个人信息卡片 -->
          <div class="bg-base-200/50 backdrop-blur-sm rounded-2xl p-6 border border-base-content/5">
            <div class="flex items-center space-x-4 mb-4">
              <div class="avatar">
                <div class="w-16 h-16 rounded-full ring-2 ring-primary ring-offset-2 ring-offset-base-100">
                  <img src="https://i.pravatar.cc/150?u=a042581f4e29026704d" alt="Avatar" />
                </div>
              </div>
              <div>
                <h3 class="font-bold text-lg">{SITE_AUTHOR}</h3>
                <p class="text-base-content/60 text-sm">独立开发者</p>
              </div>
            </div>
            <p class="text-base-content/70 text-sm mb-4">
              热爱技术，喜欢记录生活中的点点滴滴。
            </p>
            <div class="flex space-x-3">
              <a href="https://twitter.com/EveSunMaple" target="_blank" class="btn btn-circle btn-sm btn-ghost hover:btn-primary">
                <i class="ri-twitter-line"></i>
              </a>
              <a href="https://github.com/EveSunMaple" target="_blank" class="btn btn-circle btn-sm btn-ghost hover:btn-primary">
                <i class="ri-github-line"></i>
              </a>
              <a href="#" target="_blank" class="btn btn-circle btn-sm btn-ghost hover:btn-primary">
                <i class="ri-telegram-line"></i>
              </a>
            </div>
          </div>

          <!-- 统计信息 -->
          <div class="bg-base-200/50 backdrop-blur-sm rounded-2xl p-6 border border-base-content/5">
            <h3 class="font-bold mb-4 flex items-center">
              <i class="ri-bar-chart-line text-primary mr-2"></i>
              统计信息
            </h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-base-content/70">动态数量</span>
                <span class="font-semibold">127</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-base-content/70">博客文章</span>
                <span class="font-semibold">23</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-base-content/70">总浏览量</span>
                <span class="font-semibold">12.5k</span>
              </div>
            </div>
          </div>

          <!-- 最近活动 -->
          <div class="bg-base-200/50 backdrop-blur-sm rounded-2xl p-6 border border-base-content/5">
            <h3 class="font-bold mb-4 flex items-center">
              <i class="ri-pulse-line text-primary mr-2"></i>
              最近活动
            </h3>
            <div class="space-y-3 text-sm">
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></div>
                <div>
                  <p class="text-base-content/70">发布了新动态</p>
                  <p class="text-base-content/50 text-xs">2小时前</p>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-secondary rounded-full mt-2 flex-shrink-0"></div>
                <div>
                  <p class="text-base-content/70">更新了博客文章</p>
                  <p class="text-base-content/50 text-xs">1天前</p>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-accent rounded-full mt-2 flex-shrink-0"></div>
                <div>
                  <p class="text-base-content/70">添加了新功能</p>
                  <p class="text-base-content/50 text-xs">3天前</p>
                </div>
              </div>
            </div>
          </div>

        </div>
      </aside>

    </div>
  </div>

  <!-- 页脚 -->
  <footer class="text-center py-12 text-base-content/60">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex justify-center space-x-6 mb-6">
        <a href="https://twitter.com/EveSunMaple" target="_blank" class="hover:text-primary transition-colors duration-300">
          <i class="ri-twitter-line text-xl"></i>
        </a>
        <a href="https://github.com/EveSunMaple" target="_blank" class="hover:text-primary transition-colors duration-300">
          <i class="ri-github-line text-xl"></i>
        </a>
        <a href="#" target="_blank" class="hover:text-primary transition-colors duration-300">
          <i class="ri-telegram-line text-xl"></i>
        </a>
      </div>
      <p class="text-sm">
        © {new Date().getFullYear()} {SITE_AUTHOR}. 用 ❤️ 和 Astro 构建
      </p>
    </div>
  </footer>

</body>
</html>